<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>
      <parameter key="simple_paginator_adapter_factory.class">Frcho\SimplePaginatorBundle\Paginator\Adapter\AdapterFactory</parameter>
      <parameter key="simple_paginator.class">Frcho\SimplePaginatorBundle\Paginator\Paginator</parameter>
  </parameters>

  <services>
      <service id="frcho.simple_paginator.adapter_factory" class="%simple_paginator_adapter_factory.class%">
      </service>
      <service id="frcho.simple_paginator" class="%simple_paginator.class%" >
          <argument type="service" id="request_stack" />
          <argument type="service" id="frcho.simple_paginator.adapter_factory" />
      </service>
  </services>

</container>
